generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  credits      Int      @default(0)
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Layout {
  id        String   @id @default(cuid())
  name      String   @unique
  json      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TtsRequest {
  id           String   @id @default(cuid())
  userId       String
  text         String
  characters   Int
  creditsUsed  Int
  voiceId      String
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
